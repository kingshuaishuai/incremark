{
  "name": "@incremark/svelte",
  "version": "0.3.9",
  "description": "High-performance streaming markdown renderer for Svelte 5 ecosystem.",
  "type": "module",
  "svelte": "./dist/index.js",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./components/*": {
      "types": "./dist/components/*.svelte.d.ts",
      "svelte": "./dist/components/*.svelte",
      "default": "./dist/components/*.svelte"
    },
    "./style.css": "@incremark/theme/styles.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "svelte-package -i src -o dist --tsconfig tsconfig.json",
    "dev": "svelte-package -i src -o dist -w --tsconfig tsconfig.json"
  },
  "dependencies": {
    "@antfu/utils": "^9.3.0",
    "@incremark/core": "workspace:*",
    "@incremark/devtools": "workspace:*",
    "@incremark/icons": "workspace:*",
    "@incremark/shared": "workspace:*",
    "@incremark/theme": "workspace:*",
    "shiki": "^3.20.0",
    "shiki-stream": "^0.1.4"
  },
  "peerDependencies": {
    "svelte": "^5.46.1",
    "mermaid": "^10.0.0 || ^11.0.0",
    "katex": "^0.16.0"
  },
  "peerDependenciesMeta": {
    "mermaid": {
      "optional": true
    },
    "katex": {
      "optional": true
    }
  },
  "devDependencies": {
    "@shikijs/core": "^3.21.0",
    "@types/mdast": "^4.0.0",
    "@sveltejs/package": "^2.4.0",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "svelte": "^5.46.1",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "markdown",
    "svelte",
    "svelte5",
    "streaming",
    "ai",
    "chatgpt",
    "llm",
    "typewriter",
    "i18n",
    "a11y"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kingshuaishuai/incremark.git",
    "directory": "packages/svelte"
  },
  "homepage": "https://www.incremark.com/"
}