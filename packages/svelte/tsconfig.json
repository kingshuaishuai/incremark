{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {},
    "outDir": "./dist",
    "rootDir": "./src",
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
    "jsx": "preserve",
    "jsxImportSource": "svelte",
    "skipLibCheck": true,
    "allowImportingTsExtensions": true
  },
  "include": ["src/**/*", "src/svelte-runes.d.ts"],
  "exclude": ["node_modules", "dist"]
}

