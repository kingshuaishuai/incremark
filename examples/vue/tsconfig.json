{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "strict": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "paths": {
      "@incremark/core": ["../../packages/core/src"],
      "@incremark/vue": ["../../packages/vue/src"],
      "@incremark/vue/*": ["../../packages/vue/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}

